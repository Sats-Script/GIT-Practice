pipeline{
    agent any
    parameters{
        string(name: 'Version' , defaultValue: '1.1.0', description: 'New Version')
        booleanParam(name: 'Run_Tests' , defaultValue: 'false' , description: 'Pick if you want to run')
        choice(name: 'Environ' , choices:['dev', 'QA', 'Prod'] , description: 'Pick up the environ')
        password(name:'Security', defaultValue:'' , description:'Enter Admin Password')
        text(name: 'Release_Notes',deafaultValue: '' , description:'Enter Release Notes')
    }
    stages{
        stage('Print Inputs') {
            steps{
                script{
                    echo "Selected environ is ${params.Environ}"
                    echo "Deplying Version is ${params.Version}"
                    echo "for test run ${params.Run_Tests}"
                    echo "Security Entered password is ${Security}"
                    echo "Here the data of Relese notes:\n ${Release_Notes}"
                }
            }
        }
    }
}